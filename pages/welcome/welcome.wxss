.contant{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b3d4db;
}

.user-img{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
