.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-box{
  margin: 10rpx 0 10rpx 10rpx;
}

.head-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.head-text{
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-bottom: 5px;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-images{
  margin-left: 16px;
  width: 100%;
  height: 400rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-images{
  width: 28px;
  height: 22px;
  margin-right: 4px;
  vertical-align: middle;
}

.post-like-font{
  font-size: 28rpx;
  color: #333;
  vertical-align: middle;
  margin-right: 10px;
}